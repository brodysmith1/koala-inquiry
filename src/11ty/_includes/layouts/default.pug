doctype html
//- Import mixins here to use globally
include ../../_includes/mixins/mixins.pug

html(lang='en-us' class='antialiased')
	head
		//- Meta Tags
		title=site.metaTitle
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(name='description', content=site.metaDescription)
		meta(name='author', content=site.author)
		meta(name="theme-color" content="#317EFB")

		link(rel='canonical', href=site.url + page.fileSlug)
		link(rel="manifest" href="/manifest.json")
		link(rel="apple-touch-icon" href="/apple-touch-icon.png")
		link(rel="shortcut icon", href="/favicon.ico")
		link(rel='stylesheet', href=assets["main.css"])
		if(project.production)
			script(defer src=assets["sw.js"])
			
		// Global site tag (gtag.js) - Google Analytics
		script(async='' src='https://www.googletagmanager.com/gtag/js?id=G-1R5Z6RR40R')
		script.
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-1R5Z6RR40R');


	body.bg-green-400.text-white.overflow-hidden.h-screen
		+nav
		.slides.flex.min-h-screen.duration-500.ease-out.text-lg
			block slides

	script(src=assets["main.js"])
